#!/bin/bash
# Fulcrum Public Gateway Configuration
# Edit these values to customize your setup

# Domain Configuration
DOMAIN="fulcrum.bittrade.co.in"
SSL_EMAIL="admin@bittrade.co.in"

# Port Configuration
FULCRUM_PORT="50005"
FULCRUM_SSL_PORT="50002"
SSH_PORT="22"

# Service Configuration
SERVICE_NAME="fulcrum-tunnel"
SSH_KEY_NAME="fulcrum_tunnel"

# Paths
SSH_KEY_PATH="$HOME/.ssh/${SSH_KEY_NAME}"
FULCRUM_CONFIG_PATH="$HOME/.fulcrum/fulcrum.conf"
FULCRUM_LOG_PATH="$HOME/.fulcrum/fulcrum.log"

# VPS Configuration (set during setup)
VPS_HOST=""
VPS_USER=""

# Nginx Configuration
NGINX_CONFIG="/etc/nginx/sites-available/${DOMAIN}"
NGINX_ENABLED="/etc/nginx/sites-enabled/${DOMAIN}"
NGINX_ACCESS_LOG="/var/log/nginx/${DOMAIN}.access.log"
NGINX_ERROR_LOG="/var/log/nginx/${DOMAIN}.error.log"

# SSL Configuration  
SSL_CERT_PATH="/etc/letsencrypt/live/${DOMAIN}/fullchain.pem"
SSL_KEY_PATH="/etc/letsencrypt/live/${DOMAIN}/privkey.pem"

# Colors for script output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Helper function to print colored output
print_status() {
    local color=$1
    local message=$2
    echo -e "${color}${message}${NC}"
}

print_success() {
    print_status "$GREEN" "✅ $1"
}

print_error() {
    print_status "$RED" "❌ $1"
}

print_warning() {
    print_status "$YELLOW" "⚠️  $1"
}

print_info() {
    print_status "$BLUE" "ℹ️  $1"
}
